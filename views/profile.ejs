    <form action="/edit" id="signup" method="post" enctype="multipart/form-data">
        <h2>Edit Profile</h2>
        <label id="label" for="username"></label>
      
        <label class="l" for="age">Age (1-100)</label>
        <input type="number" name="age" placeholder="Age" id="age" required min="1" max="100">
      
        <label class="l" for="phone">Phone No (10 digits)</label>
        <input type="tel" name="phone" placeholder="Phone No" id="phone" required pattern="[0-9]{10}">
      
        <label class="l" for="bio">Your Bio</label>
        <textarea type="text" name="bio" id="bio" placeholder="Bio"></textarea>
      
        <label for="gender">Choose Gender</label>
